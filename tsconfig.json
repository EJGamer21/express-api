{
    "compilerOptions": {
        "module": "CommonJS",
        "sourceMap": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "outDir": "./dist",
        "allowJs": true,
        "strict": false,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "*": [ "node_modules/*" ]
        },
        "typeRoots": [ "node_modules/types" ],
        "types": [
            "node", "express", "morgan", "mssql"
        ]
    },
    "include": [ "./src/**/*" ],
    "exclude": [ "node_modules" ]
}
